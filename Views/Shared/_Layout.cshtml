<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Xenon Boostrap Admin Panel" />
    <meta name="author" content="" />
    <title>仟云科技后台管理系统 - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    @RenderSection("styles", false)
</head>
<body class="page-body">
    <div class="page-container">
        <div class="sidebar-menu toggle-others fixed">
            <div class="sidebar-menu-inner">
                <header class="logo-env">
                    <!-- logo -->
                    <div class="logo">
                        <a href="dashboard-1.html" class="logo-expanded">
                            <img src="/assets/images/logo@2x.png" width="80" alt="" />
                        </a>
                        <a href="dashboard-1.html" class="logo-collapsed">
                            <img src="/assets/images/logo-collapsed@2x.png" width="40" alt="" />
                        </a>
                    </div>
                    <!-- This will toggle the mobile menu and will be visible only on mobile devices -->
                    <div class="mobile-menu-toggle visible-xs">
                        <a href="#" data-toggle="user-info-menu">
                            <i class="fa-bell-o"></i>
                        </a>
                        <a href="#" data-toggle="mobile-menu">
                            <i class="fa-bars"></i>
                        </a>
                    </div>
                </header>
                <ul id="main-menu" class="main-menu">
                    <li>
                        <a href="@Url.Action("Register","Terminal")">
                            <i class="linecons-cog"></i>
                            <span class="title">设备激活</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","User")">
                            <i class="linecons-cog"></i>
                            <span class="title">用户管理</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Company")">
                            <i class="linecons-cog"></i>
                            <span class="title">商家管理</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","SalesMan")">
                            <i class="linecons-cog"></i>
                            <span class="title">业务员管理</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Client")">
                            <i class="linecons-cog"></i>
                            <span class="title">客户管理</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Terminal")">
                            <i class="linecons-cog"></i>
                            <span class="title">设备管理</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Order")">
                            <i class="linecons-cog"></i>
                            <span class="title">订单管理</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="main-content">
            <nav class="navbar user-info-navbar" role="navigation">
                <ul class="user-info-menu left-links list-inline list-unstyled">
                    <li class="hidden-sm hidden-xs">
                        <a href="#" data-toggle="sidebar">
                            <i class="fa-bars"></i>
                        </a>
                    </li>
                    <li style="min-height: 77px; left: 0px;">
                        <!-- You can add "always-visible" to show make the search input visible -->
                        <form method="post" action="@Url.Action("GetPeccancyInfo", "Order")" style="padding: 24px 20px">
                            <label>川</label>
                            <input type="text" id="PlateNumber" name="PlateNumber" value="@(ViewBag.PlateNumber == null ? "" : ViewBag.PlateNumber.Substring(1))" class="form-control" style="background:#f3f3f3; display: inline-block; width:100px; vertical-align:middle" placeholder="车牌号(必填)" maxlength="8">
                            <input type="text" id="VIN" name="VIN" value="@ViewBag.VIN" class="form-control" style="background: #f3f3f3; display: inline-block; width: 200px; vertical-align: middle" placeholder="车架号(必填)" maxlength="20">
                            <input type="submit" id="btn_GetPeccancyInfo" class="btn btn-primary" value="违章信息查询" />
                        </form>
                    </li>
                </ul>
                <ul class="user-info-menu right-links list-inline list-unstyled">
                    <li class="dropdown user-profile">
                        <a href="#" data-toggle="dropdown">
                            <img src="/assets/images/user-4.png" alt="user-image" class="img-circle img-inline userpic-32" width="28" />
                            <span>
                                Arlind Nushi
                                <i class="fa-angle-down"></i>
                            </span>
                        </a>
                        <ul class="dropdown-menu user-profile-menu list-unstyled">
                            <li>
                                <a href="#edit-profile">
                                    <i class="fa-edit"></i>
                                    New Post
                                </a>
                            </li>
                            <li>
                                <a href="#settings">
                                    <i class="fa-wrench"></i>
                                    Settings
                                </a>
                            </li>
                            <li>
                                <a href="#profile">
                                    <i class="fa-user"></i>
                                    Profile
                                </a>
                            </li>
                            <li>
                                <a href="#help">
                                    <i class="fa-info"></i>
                                    Help
                                </a>
                            </li>
                            <li class="last">
                                <a href="extra-lockscreen.html">
                                    <i class="fa-lock"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <div class="page-title">
                <div class="title-env">
                    <h1 class="title">@(ViewBag.Title) @RenderSection("AddDataLink", false)</h1>

                </div>

                <div class="breadcrumb-env">
                    <ol class="breadcrumb bc-1">
                        <li>
                            <a href="dashboard-1.html"><i class="fa-home"></i>主页</a>
                        </li>

                    </ol>

                </div>

            </div>
            <div>
                @RenderBody()
            </div>
            <footer class="main-footer sticky footer-type-1">
                <div class="footer-inner">
                    <div class="footer-text">
                        &copy; 2015
                        <strong>仟云网络科技</strong>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/xenon")
    <script>
        $(document).ready(function () {
            $("#btn_GetPeccancyInfo").on("click", function () {
                if ($("#PlateNumber").val().trim().length == 0) {
                    $("#PlateNumber").val("");
                    $("#PlateNumber").focus();
                    return false;
                }
                if ($("#VIN").val().trim().length == 0) {
                    $("#VIN").val("");
                    $("#VIN").focus();
                    return false;
                }
                $("#PlateNumber").val("川" + $("#PlateNumber").val());
                return true;
            });
        });
        
    </script>
    @RenderSection("scripts", false)
</body>
</html>