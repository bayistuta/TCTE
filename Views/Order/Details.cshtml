    <table class="table table-striped table-bordered">
        <tr>
            <th>车牌号</th>
            <th>车架号</th>
            <th>客户姓名</th>
            <th>客户电话</th>
            <th>客户地址</th>
        </tr>
        <tr>
            <td>@Html.DisplayFor(o => o.PlateNumber)</td>
            <td>@Html.DisplayFor(o => o.VIN)</td>
            <td>@Html.DisplayFor(o => o.Name)</td>
            <td>@Html.DisplayFor(o => o.Phone)</td>
            <td>@Html.DisplayFor(o => o.Address)</td>
        </tr>
        <tr>
            <td colspan="8">
                <strong>创建时间：</strong>
                @Html.DisplayFor(o => o.CreatedDate)
            </td>
        </tr>
        <tr>
            <td colspan="8">
                <strong>开始处理时间：</strong>
                @Html.DisplayFor(o => o.StartTime)
            </td>
        </tr>
        <tr>
            <td colspan="8">
                <strong>处理完成时间：</strong>
                @Html.DisplayFor(o => o.EndTime)
            </td>
        </tr>
        <tr>
            <td colspan="8">
                <strong>备注：</strong>
                @Html.DisplayFor(o => o.Comment)
            </td>
        </tr>
    </table>
    <hr />
    <table class="table table-striped table-bordered">
        <tr>
            <th>决定书编号</th>
            <th>违法时间</th>
            <th>违法地点</th>
            <th>违法行为</th>
            <th>罚款金额</th>
            <th>扣分</th>
            <th>是否交费</th>
            <th>银行流水号</th>
        </tr>
        @if (Model.OrderDetails.Count == 0)
        {
            <tr>
                <td colspan="8">订单未完成，暂无详细信息</td>
            </tr>
        }
        else
        {
            foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@Html.DisplayFor(a => item.DecisionNumber)</td>
                    <td>@Html.DisplayFor(a => item.PeccancyTime)</td>
                    <td>@Html.DisplayFor(a => item.PeccancyAddress)</td>
                    <td>@Html.DisplayFor(a => item.PeccancyBehavior)</td>
                    <td>@Html.DisplayFor(a => item.Money)</td>
                    <td>@Html.DisplayFor(a => item.Deduction)</td>
                    <td>@(item.IsPay.HasValue ? (item.IsPay.Value ? "是" : "否") : "-")</td>
                    <td>@Html.DisplayFor(a => item.BankSequenceNumber)</td>
                </tr>
            }
        }
    </table>
