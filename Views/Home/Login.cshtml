@model TCTE.ViewModel.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>仟云科技后台管理系统 - 后台登录</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
</head>
<body class="page-body login-page">
    <div class="login-container">

        <div class="row">

            <div class="col-sm-6">

                <!-- Errors container -->
                <div class="errors-container">


                </div>

                <!-- Add class "fade-in-effect" for login form effect -->
                <form method="post" role="form" id="login" class="login-form fade-in-effect">

                    <div class="login-header">
                        <div class="logo">
                            <img src="/assets/images/logo@2x.png" alt="" width="80" />
                            <span>后台登录</span>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(a => a.UserName, new { @class = "control-label" })
                        @Html.TextBoxFor(a => a.UserName, new { @class = "form-control input-dark", autocomplete = "off" })
                        @Html.ValidationMessageFor(a => a.UserName)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(a => a.Password, new { @class = "control-label" })
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control input-dark", autocomplete = "off" })
                        @Html.ValidationMessageFor(a => a.Password)
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-dark  btn-block text-left">
                            <i class="fa-lock"></i>
                            进入系统
                        </button>
                    </div>

                    <div class="login-footer">
                        <div class="info-links">
                            仟云科技后台管理系统
                        </div>

                    </div>

                </form>


            </div>

        </div>

    </div>

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/xenon")
    <script>
        $(document).ready(function () {
            setTimeout(function () { $(".fade-in-effect").addClass('in'); }, 1);
        });
    </script>
</body>

</html>
