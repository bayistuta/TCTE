@model TCTE.ViewModel.ModifyPwdModel

@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(model => model.OldPwd, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.OldPwd, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.OldPwd)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NewPwd, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.NewPwd, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewPwd)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NewPwdConfirm, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.NewPwdConfirm, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NewPwdConfirm)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-success btn-block btn-lg" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

