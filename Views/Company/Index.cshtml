@model IEnumerable<TCTE.Models.Company>

@{
    ViewBag.Title = "商家列表";
    Layout = "~/Views/Shared/_FormListLayout.cshtml";
}

@section  ListHeader{
    <th class="sorting_asc">
        @Html.DisplayNameFor(model => model.Code)
    </th>
    <th class="sorting">
        @Html.DisplayNameFor(model => model.Name)
    </th>
    <th class="sorting">
        @Html.DisplayNameFor(model => model.FirstServiceDate)
    </th>
    <th class="sorting">
        @Html.DisplayNameFor(model => model.OrderCount)
    </th>
    <th>归属地</th>
    <th class="sorting">
        @Html.DisplayNameFor(model => model.CreatedDate)
    </th>
    <th class="sorting">
        @Html.DisplayNameFor(model => model.ContactName)
    </th>
    <th class="sorting">
        @Html.DisplayNameFor(model => model.Phone)
    </th>
    <th>操作</th>
}

@section ListBody{
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @(item.FirstServiceDate.HasValue ? item.FirstServiceDate.Value.ToString("yyyy-MM-dd") : "暂无服务")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderCount)
            </td>
            <td>
                @item.City.Name
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>            
            <td style="white-space:nowrap">
                @Html.ActionLink("编辑", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary btn-sm btn-icon icon-left" })
                @Html.ActionLink("查看", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm btn-icon icon-left" })
                @Html.ActionLink("删除", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm btn-icon icon-left btn-del" })
            </td>
        </tr>
    }
}

@section DeleleteFailureReason{
    该商家拥有1个以上的设备或订单，为保证数据准确性，不允许删除此商家
}
